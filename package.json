{
  "name": "advanced-react-patterns",
  "private": true,
  "epicshop": {
    "title": "Advanced React Patterns ðŸ¤¯",
    "githubRoot": "https://github.com/epicweb-dev/advanced-react-patterns/blob/main"
  },
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "postinstall": "cd ./epicshop && npm install",
    "start": "npx --prefix ./epicshop epicshop start",
    "dev": "npx --prefix ./epicshop epicshop start",
    "setup": "node ./epicshop/setup.js",
    "setup:custom": "node ./epicshop/setup-custom.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "cd ./epicshop && npm test",
    "validate:all": "npm-run-all --parallel --print-label --print-name --continue-on-error lint typecheck"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@testing-library/user-event": "^14.5.2",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "react": "18.3.0-canary-03d6f7cf0-20240209",
    "react-dom": "18.3.0-canary-03d6f7cf0-20240209"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8.16.0",
    "git": ">=2.18.0"
  },
  "devDependencies": {
    "@epic-web/workshop-utils": "^4.2.2",
    "@testing-library/react": "^15.0.4",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "eslint": "^9.1.1",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "options": {
          "useTabs": false
        }
      },
      {
        "files": [
          "**/*.mdx"
        ],
        "options": {
          "proseWrap": "preserve",
          "htmlWhitespaceSensitivity": "ignore"
        }
      }
    ]
  },
  "prettierIgnore": [
    "node_modules",
    "**/build/**",
    "**/public/build/**",
    ".env",
    "**/package.json",
    "**/tsconfig.json",
    "**/package-lock.json",
    "**/playwright-report/**"
  ]
}
